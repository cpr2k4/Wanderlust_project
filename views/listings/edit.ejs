<%layout('../layouts/boilerplate.ejs')-%>

<div class="row row-cols-md-8 offset-2">
    <h3>Edit your listing:</h3>
    <form method="POST" action="/listings/<%=list._id%>?_method=PUT" class="needs-validation" novalidate enctype="multipart/form-data">
        <div class="mb-3 col-md-8">
            <label for="title" class="form-label">Title:</label>
            <input id="title" class="form-control" type="text" name="listing[title]" value="<%=list.title%>" required>
            <div class="valid-feedback">
                Wonderful Title!
            </div>
        </div>
        <div class="mb-3 col-md-8">
            <label for="description" class="form-label">Description:</label>
            <textarea id="description" class="form-control" name="listing[description]" cols="30" rows="10" required><%=list.description%></textarea>
            <div class="invalid-feedback">
                Please add some description.
            </div>
        </div>
        <div class="mb-3 col-md-8">
            <h4>Original image:</h4>
            <img src="<%=compressedUrl%>" alt="image" width="300">
        </div>
        <div class="mb-3 col-md-8">
            <label for="image" class="form-label">Image:</label>
            <input id="image" class="form-control" type="file" name="listing[image]">
        </div>
       
        <div class="mb-3 col-md-8">
            <label for="price" class="form-label">Price:</label>
            <input id="price" class="form-control" type="text" name="listing[price]" value="<%=list.price%>" required>
            <div class="invalid-feedback">
                Please mention price.
            </div>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="location" class="form-label">Location:</label>
            <input id="location" class="form-control" type="text" name="listing[location]" value="<%=list.location%>" required>
            <div class="invalid-feedback">
                Please specify location.
            </div>
        </div>
        
        <div class="mb-3 col-md-8">
            <label for="country" class="form-label">Country:</label>
            <input id="country" class="form-control" type="text" name="listing[country]" value="<%=list.country%>" required>
            <div class="invalid-feedback">
                Please mention country name.
            </div>
        </div>
    
        <button class="btn editBtn">Confirm Edit</button>
    </form>
</div>
